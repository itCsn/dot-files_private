!! URxvt Appearance
!URxvt.font: xft:Inconsolata:size=8
!URxvt.font: xft:Mono:pixelsize=14:antialias=true
!URxvt.font: xft:FantasqueSansMonoNerdFontCompleteM-Regular:size=12
URxvt.font: xft:Inconsolata:pixelsize=14:antialias=true, xft: DejaVu Sans Mono for Powerline:size=12,xft:Hack Nerd font:pixelsize=12,xft: Inconsolata Regular Nerd Font:pixelsize=12
!URxvt.font:	xft:Hack Regular Nerd Font Complete
!URxvt.boldFont: xft:
!URxvt.italicFont: xft:DejaVu Sans Mono:pixelsize=15,style=Book
!URxvt.boldItalicfont: xft:DejaVu Sans Mono:pixelsize=15,style=Book
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
!URxvt.internalBorder: 24
URxvt.internalBorder: 4
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: false 
URxvt.depth: 24
URxvt.iso14755: false
URxvttermName: rxvt-unicode URxvtborderless: 0

!! URxvt Functions
URxvt.perl-ext-common: resize-font,selection-to-clipboard,pasta,clipboard,bell-command
URxvt.keysym.Shift-Control-C:    perl:clipboard:copy
URxvt.keysym.Shift-Control-V:    perl:clipboard:paste
URxvt.bell-command: aplay /home/italo/.beep.wav
!! Comment this if you do not  want copy when text is selected
URxvt.clipboard.autocopy: true
URxvt.resize-font.smaller:  C-j
URxvt.resize-font.bigger:   C-k
